@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="nav-item">
        <a  class="nav-link-item color-blue" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </div>
    <div class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link-item color-blue">Logout</button>
        </form>
    </div>
}
else
{
    <div class="nav-item">
        <a class="nav-link-item color-blue" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </div>
    <div class="nav-item">
        <a class="nav-link-item color-blue" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>
}