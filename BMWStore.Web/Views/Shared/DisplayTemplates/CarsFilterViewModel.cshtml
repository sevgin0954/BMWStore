@model CarsFilterViewModel
<div>
    <h5>Show Only</h5>
</div>
<div class="container-light-blue border-grey border-radius-smooth">
    <div class="d-flex flex-column">
        <div>
            <form method="get">
                <div class="mb-4">
                    <div>
                        YEAR
                    </div>
                    <div>
                        <input data-click
                               name="year"
                               value="All"
                               type="radio"
                               checked="checked" />
                        <span>All</span>
                    </div>
                    @foreach (var modelType in Model.Years)
                    {
                        <div>
                            <input data-click
                                   name="year"
                                   value="@modelType.Value"
                                   type="radio"
                                   checked="@modelType.IsSelected" />
                            <span>@($"{@modelType.Text} ({@modelType.CarsCount})")</span>
                        </div>
                    }
                </div>

                <div class="mb-4">
                    <div>
                        SERIES
                    </div>
                    <div>
                        <input data-click
                               name="series"
                               value="All"
                               type="radio"
                               checked="checked" />
                        <span>All</span>
                    </div>
                    @foreach (var modelType in Model.Series)
                    {
                        <div>
                            <input data-click
                                   name="series"
                                   value="@modelType.Value"
                                   type="radio"
                                   checked="@modelType.IsSelected" />
                            <span>@($"{@modelType.Text} ({@modelType.CarsCount})")</span>
                        </div>
                    }
                </div>

                <div class="mb-4">
                    <div>
                        MODEL
                    </div>
                    @foreach (var modelType in Model.ModelTypes)
                    {
                        <div>
                            <input data-click
                                   name="modelTypes"
                                   value="@modelType.Value"
                                   type="checkbox"
                                   checked="@modelType.IsSelected" />
                            <span>@($"{@modelType.Text} ({@modelType.CarsCount})")</span>
                        </div>
                    }
                </div>

                <div class="mb-4">
                    <div>
                        PRICE
                    </div>
                    <div>
                        <input data-click
                               name="priceRange"
                               value="All"
                               type="radio"
                               checked="checked" />
                        <span>All</span>
                    </div>
                    @foreach (var modelType in Model.Prices)
                    {
                        <div>
                            <input data-click
                                   name="priceRange"
                                   value="@modelType.Value"
                                   type="radio"
                                   checked="@modelType.IsSelected" />
                            <span>@($"{@modelType.Text} ({@modelType.CarsCount})")</span>
                        </div>
                    }
                </div>

                <a class="btn border-blue-hover" asp-action="Index">
                    <i class="far fa-trash-alt"></i>
                    Clear
                </a>

                <button id="filterSubmit" type="submit" hidden></button>
            </form>
        </div>
    </div>
</div>