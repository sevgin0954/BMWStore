@using CloudinaryDotNet;
@inject CloudinaryDotNet.Cloudinary cloudinary;

<div class="row">
    <div class="col-12 col-xl-4 no-wrap">
        <div class="row">
            <div class="col">
                <div>
                    <i>Name:</i>
                </div>
                <div>
                    <i>Price:</i>
                </div>
                <div>
                    <i>Mileage:</i>
                </div>
                <div>
                    <i>Model Type:</i>
                </div>
            </div>
            <div class="col no-padding-left">
                <div>
                    @Model.Name
                </div>
                <div>
                    @Model.Price
                </div>
                <div>
                    @if (Model.IsNew)
                    {
                        @:The car is new
                    }
                    else
                    {
                        @Model.Mileage
                    }
                </div>
                <div>
                    @Model.ModelTypeName
                </div>
            </div>
        </div>
    </div>

    <span class="border-right d-none d-xl-inline"></span>

    <div class="col-12 col-xl-4 no-wrap">
        <div class="row">
            <div class="col">
                <div>
                    <i>Series:</i>
                </div>
                <div>
                    <i>Vin:</i>
                </div>
                <div>
                    <i>Warranty:</i>
                </div>
                <div>
                    <i>Year:</i>
                </div>
            </div>
            <div class="col no-padding-left">
                <div>
                    @Model.SeriesName
                </div>
                <div>
                    @Model.Vin
                </div>
                <div>
                    @Model.WarrantyMonthsLeft
                </div>
                <div>
                    @Model.Year
                </div>
            </div>
        </div>
    </div>

    <span class="border-right d-none d-xl-inline"></span>

    <div class="row col-lg-4 d-flex">
        <div class="mx-auto">
            @cloudinary.Api.UrlImgUp.Secure(true).Transform(
                new Transformation().Quality("auto").Width(250).Height(150).Crop("fill")
            ).BuildImageTag(Model.PicturePublicId)
        </div>
    </div>
</div>