@model CarsInventoryViewModel
<div>
    <h5>Show Only</h5>
</div>
<div class="container-light-blue border-grey border-radius-smooth">
    <div class="d-flex flex-column">
        <div>
            <form method="get">
                <div class="mb-4">
                    <div>
                        YEAR
                    </div>
                    @foreach (var modelType in Model.Years)
                    {
                        <div>
                            <input onclick="clickBtn()"
                                   name="year"
                                   value="@modelType.Value"
                                   type="radio"
                                   checked="@modelType.IsSelected" />
                            <span>@modelType.Text</span>
                        </div>
                    }
                </div>

                <div class="mb-4">
                    <div>
                        SERIES
                    </div>
                    @foreach (var modelType in Model.Series)
                    {
                        <div>
                            <input onclick="clickBtn()"
                                   name="series"
                                   value="@modelType.Value"
                                   type="radio"
                                   checked="@modelType.IsSelected" />
                            <span>@modelType.Text</span>
                        </div>
                    }
                </div>

                <div class="mb-4">
                    <div>
                        MODEL
                    </div>
                    @foreach (var modelType in Model.ModelTypes)
                    {
                        <div>
                            <input onclick="clickBtn()"
                                   name="modelTypes"
                                   value="@modelType.Value"
                                   type="checkbox"
                                   checked="@modelType.IsSelected" />
                            <span>@modelType.Text</span>
                        </div>
                    }
                </div>

                <div class="mb-4">
                    <div>
                        PRICE
                    </div>
                    @foreach (var modelType in Model.Prices)
                    {
                        <div>
                            <input onclick="clickBtn()"
                                   name="priceRange"
                                   value="@modelType.Value"
                                   type="radio"
                                   checked="@modelType.IsSelected" />
                            <span>@modelType.Text</span>
                        </div>
                    }
                </div>

                <a class="btn border-blue-hover" asp-action="Index">
                    <i class="far fa-trash-alt"></i>
                    Clear
                </a>

                <button id="filterSubmit" type="submit" hidden></button>
            </form>
        </div>
    </div>
</div>