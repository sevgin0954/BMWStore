@model CarInvertoryViewModel
@using CloudinaryDotNet;
@inject CloudinaryDotNet.Cloudinary cloudinary;

@{
    ViewData["Title"] = "Car Information";
}

<h4 class="mt-4">@($"{Model.Year} {Model.Car.Name} {Model.Car.ModelTypeName} in {Model.Car.ColorName}")</h4>

@{ 
    var invertoryControllerName = "";
    var invertoryType = "";
}

@if (Model.isNew)
{
    invertoryControllerName = "NewInvertory";
    invertoryType = "NEW";
}
else
{
    invertoryControllerName = "UsedInvertory";
    invertoryType = "USED";
}

<div class="mt-4 mb-2 no-padding">
    <a asp-controller="@invertoryControllerName" asp-action="Index">@invertoryType</a>
    <span> > </span>
    <a asp-controller="@invertoryControllerName" asp-action="Index" asp-route-year="@Model.Year">@Model.Year</a>
    <span> > </span>
    <a asp-controller="@invertoryControllerName" asp-action="Index" asp-route-modelTypes="@Model.ModelTypeId">@Model.ModelTypeName</a>
    <span> > </span>
    <span>@Model.Car.Name</span>
</div>

<div class="row no-margin">
    <div class="col-8 no-padding">
        <h6 class="font-medium">Photos</h6>
        <hr />
        <div class="text-center">
            @cloudinary.Api.UrlImgUp.Secure(true).Transform(
            new Transformation()
                .Quality("auto")
                .FetchFormat("auto")
                .Crop("scale")
                .Width(500)
                .Height(300)
                .Crop("fill")
        ).BuildImageTag(Model.Car.PicturePublicIds.First())
        </div>
    </div>
    <div class="col no-padding ml-4">
        <div class="container-light-blue border-radius-smooth border-grey">
            <div class="row no-margin mt-2 font-large">
                Price:
                <div class="ml-auto"><strong>$@Model.Car.Price</strong></div>
            </div>

            <hr />

            <div class="no-margin mt-4 font-small">
                <div class="row w-100">
                    <div class="col-4">
                        <div class="mb-4">
                            <i class="fas fa-gas-pump fa-2x"></i>
                        </div>

                        <div class="mb-4">
                            <i class="fas fa-cogs fa-2x"></i>
                        </div>

                        <div class="mb-4">
                            <i class="fas fa-tint fa-2x"></i>
                        </div>

                        <div class="mb-4">
                            <i class="fas fa-clipboard-list fa-2x"></i>
                        </div>
                    </div>

                    <div class="col-8">
                        <div class="mb-2 d-flex">
                            <div class="mr-4">
                                <div>
                                    <strong>@Model.Car.FuelConsumation_City_Litres_100Km lpk</strong>
                                </div>
                                <span>City</span>
                            </div>

                            <div>
                                <div class="">
                                    <strong>@Model.Car.FuelConsumation_Highway_Litres_100Km lpk</strong>
                                </div>
                                <span>Highway</span>
                            </div>
                        </div>

                        <div class="mb-2">
                            <div>
                                <strong>@Model.Car.EngineName</strong>
                            </div>
                            <span>@Model.Car.TransmissionName</span>
                        </div>

                        <div>
                            <div>
                                <strong>@Model.Car.ColorName</strong>
                            </div>
                            <span class="mb-auto">Exterior</span>
                        </div>

                        <div class="mt-3">
                            <div>
                                <strong>@Model.Car.Vin</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<h6 class="font-medium">Options</h6>
<hr />
<div class="row">
    @{ 
        var optionsCount = Model.Car.OptionNames.Count();
        var leftColOptionsCount = (int)Math.Ceiling(optionsCount / 2.0);
    }
    <div class="col-4">
        <partial name="_OptionsPartial" model="@Model.Car.OptionNames.Take(leftColOptionsCount)" />
    </div>
    <div class="col-4">
        <partial name="_OptionsPartial" model="@Model.Car.OptionNames.Skip(leftColOptionsCount)" />
    </div>
</div>

<h6 class="font-medium mt-4">Detailed Specifications</h6>
<hr />
<div class="d-flex font-medium">
    <div class="ml-auto mr-auto">
        <div class="mb-4">
            <i class="fas fa-tachometer-alt"></i>
            Acceleration 0-100km: @Model.Car.Acceleration_0_100Km
        </div>

        <div class="mb-4">
            <i class="fas fa-box"></i>
            Engine Displacement: @Model.Car.Displacement in
        </div>

        <div class="mb-4">
            <i class="fas fa-cogs"></i>
            Transmission: @Model.Car.TransmissionName
        </div>

        <div class="mb-4">
            <i class="fas fa-horse"></i>
            Hourse Power: @Model.Car.HoursePower
        </div>

        <div class="mb-4">
            <i class="fas fa-truck-loading"></i>
            Torque: @Model.Car.Torque
        </div>
    </div>

    <div class="mr-auto ml-auto">
        <div class="mb-4">
            <i class="fas fa-smog"></i>
            CO2 Emissions: @Model.Car.CO2Emissions gr
        </div>

        <div class="mb-4">
            <i class="fas fa-door-open"></i>
            DoorsCount: @Model.Car.DoorsCount
        </div>

        <div class="mb-4">
            <i class="fas fa-gas-pump"></i>
            Fuel Type: @Model.Car.FuelTypeName
        </div>

        <div class="mb-4">
            <i class="fas fa-car"></i>
            Model Type: @Model.Car.ModelTypeName
        </div>

        <div class="mb-4">
            <i class="fas fa-weight-hanging"></i>
            Weight: @Model.Car.Weight_Kg kg
        </div>
    </div>
</div>