@model AdminDashboardStatisticsViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex">
    <ul id="admin-menu" class="list-group list-group-flush">
        <li class="list-group-item no-padding">
            <a class="btn btn-lg no-outline btn-light-blue-hover border-no-radius"
               data-name="Dashboard"
               asp-controller="Dashboard" asp-action="Index">
                Dashboard
            </a>
        </li>
        <li class="list-group-item no-padding">
            <a class="btn btn-lg no-outline btn-light-blue-hover border-no-radius text-left w-100" href="#">Users</a>
        </li>
        <li class="list-group-item no-padding">
            <a class="btn btn-lg no-outline btn-light-blue-hover border-no-radius text-left w-100" href="#">Orders</a>
        </li>
        <li class="list-group-item no-padding">
            <a class="btn btn-lg no-outline btn-light-blue-hover border-no-radius text-left w-100" href="#">Cars</a>
        </li>
        <li class="list-group-item no-padding">
            <a class="btn btn-lg no-outline btn-light-blue-hover border-no-radius text-left w-100" href="#">Car options</a>
        </li>
        <li class="list-group-item no-padding">
            <a class="btn btn-lg no-outline btn-light-blue-hover border-no-radius text-left w-100" href="#">Fuel types</a>
        </li>
        <li class="list-group-item no-padding">
            <a class="btn btn-lg no-outline btn-light-blue-hover border-no-radius text-left w-100" href="#">Series</a>
        </li>
        <li class="list-group-item no-padding">
            <a class="btn btn-lg no-outline btn-light-blue-hover border-no-radius text-left w-100" href="#">Car models</a>
        </li>
    </ul>
<div class="w-100 light-blue-container border-radius-smooth-top-right border-radius-smooth-bottom-right">
    <h5>Total</h5>
    <div class="container-item border-grey border-radius-smooth">
        Total orders: @Model.TotalOrdersCount
    </div>

    <h5>Cars</h5>
    <div class="container-item border-grey border-radius-smooth">
        <h6>New</h6>
        <div class="ml-3">
            <div>
                Total: @Model.NewCarsOrdersCount
            </div>
            <div>
                From past 24 hours: @Model.NewCarsOrderedFromPast24HoursCount
            </div>
        </div>

        <h6>Used</h6>
        <div class="ml-3">
            <div>
                Total: @Model.UsedCarsOrdersCount
            </div>
            <div>
                From past 24 hours: @Model.UsedCarsOrderedFromPast24HoursCount
            </div>
        </div>
    </div>

    <h5>Users</h5>
    <div class="container-item border-grey border-radius-smooth">
        Total
        <div class="ml-3">
            Total users count: @Model.TotalUsersCount
        </div>
    </div>
</div>
</div>

@section Scripts { 
    <script src="~/js/highlightCurrentAdminMenu.js"></script>
}