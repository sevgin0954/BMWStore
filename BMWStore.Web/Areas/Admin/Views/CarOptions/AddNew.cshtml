@model AdminOptionCreateBindingModel
@{
    ViewData["Title"] = "Add New Car Option";
}

<h5>@ViewData["Title"]</h5>

<div class="container-item-white border-radius-smooth border-grey">
    <form class="form-group" method="post">
        <div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" />
        
        <form-buttons controller-name="CarOptions" action-name="Index"></form-buttons>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}